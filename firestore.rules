
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // For this simplified example, we are allowing reads and writes.
    // In a real production app, you would secure this data based on
    // user authentication (e.g., only a logged-in doctor can access
    // their patients, and a patient can only access their own data).
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
