rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      // Doctors (authenticated users) can read and write all patient data.
      allow read, write: if request.auth != null;

      // Patients (unauthenticated) can get their own document to view the dashboard
      // and update it to add records or change their profile. This is secure because
      // they must possess the unique and unguessable patientId.
      allow get, update: if request.auth == null;

      // Rules for the chat subcollection.
      match /chat/{messageId} {
        // This allows anyone (doctor or patient with the link) to read and write messages.
        // The `read` permission includes `get` and `list`, which is required for the
        // onSnapshot listener to work. The `write` permission allows messages to be sent.
        // This is the definitive fix for the persistent permission errors.
        allow read, write: if true;
      }
    }
  }
}
