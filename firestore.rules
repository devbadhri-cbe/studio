
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'patients' collection
    match /patients/{patientId} {
      // Doctors (authenticated) can perform any action on any patient document.
      allow read, write, delete: if request.auth != null;

      // Patients (unauthenticated) can read their own document to load their dashboard,
      // and update it to save new records or profile information.
      allow get, update: if request.auth == null;

      // Rules for the 'chat' subcollection
      match /chat/{messageId} {
        // Anyone (doctor or patient) can read and create chat messages.
        // This is required because patients are not authenticated via Firebase Auth.
        // Security is handled by the obscurity of the patientId.
        allow read, create: if true;
        
        // Only doctors can delete messages.
        allow delete: if request.auth != null;
      }
    }
  }
}
