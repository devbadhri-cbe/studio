
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      // Doctors (authenticated users) can read and write all patient data.
      allow read, write: if request.auth != null;

      // Patients (unauthenticated) can get their own document.
      // This is the key change: a patient needs 'get' permission
      // on the parent document to access any subcollection.
      allow get: if request.auth == null;
      
      // Patients can update their own document to add records.
      allow update: if request.auth == null;

      // Rules for the chat subcollection.
      match /chat/{messageId} {
        // Now that the parent document rule is correct, this will work.
        // Anyone who can get the patient document can also read and write
        // to its chat subcollection.
        allow read, write: if true;
      }
    }
  }
}
