rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Doctors collection
    match /doctors/{doctorId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == doctorId;
    }
    
    // Patients collection
    match /patients/{patientId} {
    	allow read;
      allow write: if request.auth != null;
    }
  }
}
