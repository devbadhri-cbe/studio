
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /patients/{patientId} {
      // Doctors (authenticated users) can manage patients
      allow list, create: if request.auth != null;
      allow get, update, delete: if request.auth != null;

      // Patients (unauthenticated) can get/update their own document if they have the ID
      allow get: if true;
      allow update: if true;

      // Rules for the chat subcollection
      match /chat/{messageId} {
        // This is the key fix: Allow anyone to query (list) the chat messages.
        // This is required for the onSnapshot listener to work for patients.
        allow list: if true;

        // Allow anyone to read and write individual chat messages.
        allow read, write: if true;
      }
    }
  }
}
