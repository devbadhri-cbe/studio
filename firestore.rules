rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    // This rule allows any authenticated user to list documents in the 'patients'
    // collection. This is much more efficient for queries than checking
    // each document individually.
    match /patients/{patientId} {
      allow list: if request.auth != null;

      // Allow reads and writes on individual documents for authenticated users.
      // In a real multi-user app, you would restrict this further, e.g.:
      // allow get: if request.auth.uid == resource.data.doctorId;
      allow get: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
  }
}
