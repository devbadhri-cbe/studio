rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      allow read, write: if request.auth != null; // Doctors can read/write any patient doc
      allow get, update: if request.auth == null;   // Patients can get/update their own doc

      match /chat/{messageId} {
        // Allow both doctors (authenticated) and patients (unauthenticated with link)
        // to read and write messages.
        allow read, write: if true;
      }
    }
  }
}
