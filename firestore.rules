rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      // Allow read access to anyone who knows the patient ID.
      // Allow write access only if the user is an authenticated doctor.
      // This rule is still too restrictive for patients.
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
