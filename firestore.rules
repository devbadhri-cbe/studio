
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the patients collection for any authenticated user.
    // In a production app, you would want to restrict this further to only allow
    // specific users (e.g., doctors) to write, and patients to only read their own data.
    match /patients/{patientId} {
      allow read, write: if request.auth != null;
    }
  }
}
