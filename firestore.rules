rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      // Doctors (authenticated users) can perform any action.
      allow read, write: if request.auth != null;

      // Patients (unauthenticated) must be able to 'get' their own
      // document to have permission to access subcollections like chat.
      allow get: if request.auth == null;
      
      // Patients can update their own document to add records/profile info.
      allow update: if request.auth == null;

      // Rules for the chat subcollection.
      match /chat/{messageId} {
        // Now that the parent document rule is correct, this allows
        // anyone with the link to read/write to the chat.
        allow read, write: if true;
      }
    }
  }
}