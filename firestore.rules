rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      // Allow anyone to read a single patient's document (for patient portal access)
      allow get: if true;
      
      // Allow authenticated users (doctors) to list and write to patient documents
      allow list, write: if request.auth != null;
    }
  }
}
