rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /doctors/{doctorId} {
      // Allow a doctor to create their own document and read it.
      allow read: if request.auth != null && request.auth.uid == doctorId;
      allow create: if request.auth != null && request.auth.uid == doctorId;
    }

    match /patients/{patientId} {
      // Allow anyone to read a patient document. Access is controlled by the unguessable patientId.
      allow get: if true;
      
      // Allow an authenticated doctor to perform all actions on their own patients.
      allow list, create, delete, update: if request.auth != null && request.auth.uid == resource.data.doctorId;
    }
  }
}
