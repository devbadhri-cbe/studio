
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Doctors can read and create their own profile.
    match /doctors/{doctorId} {
      allow read, create: if request.auth.uid == doctorId;
    }

    // Patients collection rules
    match /patients/{patientId} {
      // A patient can read/update their own data. The patientId is public but unguessable.
      allow read, update: if resource.data.id == patientId;
      
      // The assigned doctor can perform all actions on their patients.
      allow read, create, update, delete: if request.auth.uid == resource.data.doctorId;
      
      // A doctor can create a new patient record.
      allow create: if request.auth.uid == request.resource.data.doctorId;
    }
  }
}
