rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the authenticated doctor.
    function isDoctor() {
      return request.auth != null;
    }

    // Secure the patients collection
    match /patients/{patientId} {
      // Doctors can do anything.
      allow read, write: if isDoctor();
      
      // Patients (unauthenticated) can get their own document to view the dashboard
      // and update it to add records or change their profile.
      // This is secure because they must know the unguessable patient ID.
      allow get, update: if !isDoctor();
      
      // Rules for the chat subcollection
      match /chat/{messageId} {
        // Anyone (doctor or patient with the link) can read and write chat messages.
        // This is necessary for the real-time chat to function for unauthenticated patients.
        allow read, write: if true;
      }
    }
  }
}
