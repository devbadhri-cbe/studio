
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read and write access to the patients collection for prototype purposes.
    // In a production app, you would lock this down based on user authentication.
    match /patients/{patientId} {
      allow read, write: if true;
    }

    // Allow read access to the AI cache. Writes are handled server-side.
    match /AiCache/{flowName}/entries/{cacheKey} {
      allow read: if true;
      allow write: if false;
    }
  }
}
