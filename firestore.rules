
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      // Allow doctors (authenticated users) to create, update, and delete patient records.
      allow write: if request.auth != null;
      
      // Allow both doctors (authenticated users) and patients (public with ID) to read.
      allow read: if true;
    }
    
    match /patients/{patientId}/{subcollection}/{docId} {
        // For any potential subcollections, inherit the same logic.
        allow write: if request.auth != null;
        allow read: if true;
    }
  }
}
