
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Doctors can read/write any patient data
    // Patients can read their own data to log in
    match /patients/{patientId} {
      allow read: if request.auth != null || resource.id == patientId;
      allow write: if request.auth != null;
    }
  }
}
