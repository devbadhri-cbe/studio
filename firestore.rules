rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      // Doctors (authenticated users) can read and write all patient data.
      allow read, write: if request.auth != null;

      // Patients (unauthenticated) can get their own document to view the dashboard
      // and update it to add new records. This is secure because they must know the
      // unique, unguessable patient ID.
      allow get, update: if request.auth == null;

      // Rules for the chat subcollection
      match /chat/{messageId} {
        // Allow reading and writing to the chat subcollection if the user
        // is either the authenticated doctor or the patient associated with the document.
        // The check request.auth == null is a simplified way to infer it's the patient,
        // as the patient is the only one accessing their data unauthenticated.
        allow read, write: if request.auth != null || request.auth == null;
      }
    }
  }
}
