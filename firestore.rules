rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /patients/{patientId} {
      // Doctors (authenticated users) can read/write any patient document.
      allow read, write: if request.auth != null;
      
      // Patients (unauthenticated users) can only read their own document.
      allow get: if true;

      // Rules for the 'chat' subcollection within each patient document.
      match /chat/{messageId} {
        // Authenticated doctors can read/write any message in any chat.
        // Unauthenticated patients can list messages in their own chatroom 
        // and create new messages.
        allow read, write: if request.auth != null || request.path[4] == patientId;
      }
    }
  }
}
